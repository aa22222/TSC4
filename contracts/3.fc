{- 
  TASK 3 - Find and replace binary substring
  Binary string is represented as a cell linked list: string splitted to chunks,
  first chunk stored to the root cell, next one to the cell in ref and so on;
  each cell can have only one ref. 
  Write the method that find and replaces one flags in the binary string
  with another value. Flags and values can be can be of any length, but
  strictly up to 128 bits. The method must replace every flag it finds.
  Flag and the value to be replaced is guaranteed to be greater than 0.
  Lets give a simple example. We have the target flag 101110101 and the value
  to be written 111111111 as inputs, and a linked list of cells, in which the bit
  value of the first cell ends with ...10100001011, and in the ref we have cell that
  starts with 10101000111111...
  The output shou2ld be a linked list where the first
  cell ends with ...10100001111, and the second cell starts with 11111000111111...

-}
int tlen(tuple t) asm "TLEN";

() recv_internal() {
}

global int last;
(slice, int) read(slice s, int n){
  int c = s.slice_bits();
  int lastv = 0;
  int b = (n > 1);
  int re = 0;
  if(c <= n){
    n -= c;
    re = s~load_uint(c);
    lastv = c;
    if(~ s.slice_refs_empty?()){
      cell t = s~load_ref();
      s = t.begin_parse();
      if(s.slice_bits() < n) {
        n = s.slice_bits();
      }
      lastv += n;
      re <<= n;
      re += s~load_uint(n);
    }
  }
  else {
    re = s~load_uint(n);
    lastv = n;
  }
  
  if(b){
    last = lastv;
  }
  return (s, re);
}

global tuple builders;
(builder, ()) write(builder b, int x, int n){
  int bitsR = 1023 - b.builder_bits();
  if(bitsR < n){
    n -= bitsR;
    b~store_uint(x >> n, bitsR);
    builders = builders.tpush(b);
    x -= (- (1 << n)) & x;
    return (begin_cell().store_uint(x, n), ());
  }
  return (b.store_uint(x, n), ());
}

;; testable
(cell) find_and_replace(int flag, int value, cell linked_list) method_id {  
  int n = 0;
  int vn = 0;
  int m = flag;
  while(m){
    n += 1;
    m >>= 1;
  }
  m = value;
  while(m){
    vn += 1;
    m >>= 1;
  }
  
  builders = empty_tuple();
  last = 0;

  int big = 1 << n;
  slice s = linked_list.begin_parse();
  builder re = begin_cell();
  int cur = s~read(n);
  while(~ s.slice_empty?()){
    if(cur == flag){
      re~write(value, vn);
      cur = s~read(n);
    }
    else {
      cur = (cur << 1) + s~read(1);
      if(cur >= big) {
        cur -= big;
        re~write(1, 1);
      }
      else {
        re~write(0, 1);
      }
    }
  }

  if(cur == flag){
    re~write(value, vn);
  }
  else {
    re~write(cur, last);
  }

  cell ret = re.end_cell();
  int i = tlen(builders);
  repeat(i){
    i -= 1;
    ret = builders.at(i).store_ref(ret).end_cell();
  }
  return ret;
}
  {-
  Read N Bits where N is the length of the flag;
  Check if flag == read;
  Basically leftshift the input then add the new bit;
  if flag == read, then flag = read new N bits;

  int n = length(flag);
  builder re = begin_cell(); // idk if new cell starts auto or if i have to manually make linked list
  slice list = linked_list.begin_parse();
  int cur = list~load_uint(n);
  while(! at_end()){
     if(cur == flag){
      re.store(value, length(value));
      cur = list~load_uint(n);
     }
     else{
      re <<= 1;
      if(re >= 2 ** n) // if largest bit is on
        re -= 2 ** n
        re.store(1, 1)
      else 
        re.store(0, 1);        
      
      re += list~load_uint(1);
     }
  }
